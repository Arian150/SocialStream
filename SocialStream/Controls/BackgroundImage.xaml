<UserControl x:Class="SocialStream.Controls.BackgroundImage"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="300" d:DesignWidth="300">
  <UserControl.Resources>
    <ImageBrush x:Key="HorizontalBackground" Stretch="UniformToFill" ImageSource="/Resources/WindowBackground.png"/>
    <ImageBrush x:Key="VerticalBackground" Stretch="UniformToFill" ImageSource="/Resources/WindowBackground_Vertical.png"/>
  </UserControl.Resources>
  <Grid x:Name="_LayoutRoot" x:FieldModifier="private"/>
</UserControl>
